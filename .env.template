# Enhanced Image Scraping API Configuration
# Copy this file to .env and add your actual API keys

# Google Custom Search API (High Priority)
# Get API key: https://developers.google.com/custom-search/v1/introduction
# Create Custom Search Engine: https://cse.google.com/cse/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Bing Search API (High Priority)
# Get API key: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=your_bing_subscription_key_here

# News API (High Priority)
# Get API key: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Twitter API v2 (Medium Priority)
# Get Bearer token: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Unsplash API (Medium Priority)
# Get Access key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Image Processing Settings
IMAGE_SCRAPING_DELAY=2000
MAX_IMAGES_PER_ARTICLE=5
MAX_CONCURRENT_REQUESTS=3

# Rate Limiting Configuration
GOOGLE_REQUESTS_PER_DAY=100
BING_REQUESTS_PER_MONTH=1000
NEWS_API_REQUESTS_PER_DAY=500

# Regional Focus (comma-separated)
PRIMARY_REGIONS=african,caribbean,afroLatino
BACKUP_REGIONS=middleEast,eastAsia,europe

# Image Quality Settings
MIN_IMAGE_WIDTH=200
MIN_IMAGE_HEIGHT=200
PREFERRED_IMAGE_FORMATS=jpg,jpeg,png,webp

