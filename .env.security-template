# 4. Monitor API key usage for unusual patterns
# 5. Revoke unused or compromised keys immediately

# =============================================================================
# üìß THIRD-PARTY API CREDENTIALS
# =============================================================================

# Google Custom Search API
# Security Level: HIGH - Monitor usage for rate limiting abuse
# Get API key: https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=your_google_api_key_here_minimum_32_chars
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Bing Search API
# Security Level: HIGH - Contains subscription key with billing implications
# Get API key: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=your_bing_subscription_key_32_chars_minimum

# News API
# Security Level: MEDIUM - Rate limited but less sensitive
# Get API key: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here_32_chars_minimum

# Twitter API v2
# Security Level: HIGH - Social media access requires careful handling
# Get Bearer token: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here_minimum_80_chars

# Unsplash API
# Security Level: MEDIUM - Image service with rate limiting
# Get Access key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_32_chars_minimum

# =============================================================================
# üîê DATABASE & INFRASTRUCTURE CREDENTIALS
# =============================================================================

# Database Connection (if applicable)
# Security Level: CRITICAL - Direct database access
DATABASE_URL=postgresql://username:password@localhost:5432/dbname
DATABASE_PASSWORD=use_strong_password_32_chars_minimum

# Redis Cache (if applicable)
# Security Level: HIGH - Cache may contain sensitive data
REDIS_URL=redis://username:password@localhost:6379

# =============================================================================
# üõ°Ô∏è SECURITY CONFIGURATION
# =============================================================================

# Application Security
NODE_ENV=development
SESSION_SECRET=generate_random_64_char_session_secret_here
JWT_SECRET=generate_random_64_char_jwt_secret_here
ENCRYPTION_KEY=generate_32_byte_hex_encryption_key_here

# API Security
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# =============================================================================
# üö¶ RATE LIMITING & MONITORING
# =============================================================================

# API Rate Limits (Conservative defaults for security)
GOOGLE_REQUESTS_PER_DAY=100
BING_REQUESTS_PER_MONTH=1000
NEWS_API_REQUESTS_PER_DAY=500
TWITTER_REQUESTS_PER_HOUR=300

# Request Delays (Prevent being blocked)
IMAGE_SCRAPING_DELAY=2000
API_REQUEST_DELAY=1000
MAX_CONCURRENT_REQUESTS=3

# =============================================================================
# üìä MONITORING & ALERTING
# =============================================================================

# Security Monitoring
SECURITY_LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
ALERT_EMAIL=security@yourdomain.com

# Error Reporting (use secure service)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# DATADOG_API_KEY=your_datadog_api_key_for_monitoring

# =============================================================================
# üåç REGIONAL & CONTENT SETTINGS
# =============================================================================

# Geographic Focus
PRIMARY_REGIONS=african,caribbean,afroLatino
BACKUP_REGIONS=middleEast,eastAsia,europe

# Content Filtering
MIN_IMAGE_WIDTH=200
MIN_IMAGE_HEIGHT=200
PREFERRED_IMAGE_FORMATS=jpg,jpeg,png,webp
MAX_IMAGES_PER_ARTICLE=5

# =============================================================================
# üîß DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode Settings (disable in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_API_CALLS=false

